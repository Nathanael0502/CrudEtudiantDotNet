@model MonProjetMVC.Models.Etudiant

@{
    ViewData["Title"] = "Détails de l'étudiant";
}

<h2 class="mb-4">Détails de l'étudiant</h2>

<div class="card p-3" style="max-width: 600px;">
    @if (!string.IsNullOrEmpty(Model.PhotoPath))
    {
        <div class="text-center mb-3">
            <img src="@Model.PhotoPath" alt="Photo de @Model.Nom" class="img-thumbnail" width="150" />
        </div>
    }

    <dl class="row">
        <dt class="col-sm-3">Nom</dt>
        <dd class="col-sm-9">@Model.Nom</dd>

        <dt class="col-sm-3">Prénom</dt>
        <dd class="col-sm-9">@Model.Prenom</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Retour</a>
    </div>
</div>
